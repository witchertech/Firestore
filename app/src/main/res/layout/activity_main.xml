<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F8C1"
    tools:context=".MainActivity">

    <View
        android:id="@+id/background_shape"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/name_input"
        android:layout_width="330dp"
        android:layout_height="68dp"
        android:layout_marginEnd="4dp"
        android:fontFamily="courier"
        android:hint="Name"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/background_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.623"
        app:layout_constraintStart_toStartOf="@+id/background_shape"
        app:layout_constraintTop_toTopOf="@+id/background_shape"
        app:layout_constraintVertical_bias="0.368" />

    <EditText
        android:id="@+id/phone_number_input"
        android:layout_width="325dp"
        android:layout_height="65dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#000000"
        android:fontFamily="courier"
        android:hint="Phone Number"
        android:inputType="phone"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/name_input"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/name_input"
        app:layout_constraintTop_toBottomOf="@id/name_input"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="345dp"
        android:layout_height="112dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/background_shape"
        app:layout_constraintStart_toStartOf="@+id/background_shape"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.171"
        app:srcCompat="@drawable/logo" />

    <Spinner
        android:id="@+id/state_spinner"
        android:layout_width="328dp"
        android:layout_height="49dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#000000"
        android:fontFamily="courier"
        android:popupBackground="#ffffff"
        android:textAlignment="gravity"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="@+id/background_shape"
        app:layout_constraintEnd_toEndOf="@id/name_input"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/name_input"
        app:layout_constraintTop_toBottomOf="@id/phone_number_input"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:layout_width="175dp"
        android:layout_height="57dp"
        android:layout_marginTop="495dp"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="@+id/background_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.279" />


</androidx.constraintlayout.widget.ConstraintLayout>